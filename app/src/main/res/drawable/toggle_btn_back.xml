<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false">
        <shape>
            <solid
                android:color="@color/LightSlateGray" />
            <stroke
                android:width="1dp"
                android:color="@color/Gray" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/Crimson"
                android:endColor="@color/FireBrick"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/DarkMagenta" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>